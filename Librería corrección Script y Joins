CREATE TABLE BOOKS (
	ID INT PRIMARY KEY AUTO_INCREMENT,
	NAME VARCHAR(50) NOT NULL,
	PRICE INT,
	CATEGORYID INT,
	AUTHORID INT,
	FOREIGN KEY (CATEGORYID) REFERENCES CATEGORIES(ID),
    FOREIGN KEY (AUTHORID) REFERENCES AUTHORS(ID)
);

CREATE TABLE CATEGORIES (
	ID INT PRIMARY KEY,
	NAME VARCHAR(50) NOT NULL
);

CREATE TABLE AUTHORS (
	ID INT PRIMARY KEY, 
	NAME VARCHAR(50) NOT NULL
);

