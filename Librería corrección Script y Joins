JOINS

SELECT * from BOOKS inner join CATEGORIES;
SELECT * from BOOKS leftouter join CATEGORIES;
SELECT * from AUTHORS rightouter join CATEGORIES;
SELECT * from CATEGORIES fullouter join BOOKS;
SELECT * from AUTHORS leftouter join BOOKS;
SELECT * from CATEGORIES leftexclude join AUTHORS;
SELECT * from BOOKS rightexclude join CATEGORIES;
